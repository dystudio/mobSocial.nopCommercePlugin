@model Nop.Plugin.Widgets.MobSocial.Models.CustomerFriendsRequestModel    
@{
    var json = Json.Encode(Model);
}


<div class="customer-friends-container">
    <div ng-controller="FriendsController" ng-init="GetCustomerFriends(@json)">
        <div ng-if="!CustomerFriends">Loading...</div>
        <div ng-if="CustomerFriends && CustomerFriends.length > 0">            
            <ul class="friend-list">
                <li ng-repeat="friend in CustomerFriends" class="customer-friends-friend-block">
                    <a href="/{{friend.SeName}}">
                        <img ng-src="{{friend.ProfileThumbnailUrl}}" />
                        <span>{{friend.DisplayName}}</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>